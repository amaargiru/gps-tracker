<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/usersLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/child_selector"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/usersScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/enterUsersButton"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/scroll_botton_margin"
        android:layout_marginLeft="@dimen/base_layout_margin"
        android:layout_marginRight="@dimen/base_layout_margin"
        android:fadeScrollbars="false" >

        <LinearLayout
            android:id="@+id/allUsersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/allLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_layout_margin"
                android:layout_marginLeft="@dimen/base_layout_margin"
                android:layout_marginRight="@dimen/base_layout_margin"
                android:layout_marginTop="@dimen/base_layout_margin"
                android:text="@string/settings_title"
                android:textColor="@color/base_text" />

            <TextView
                android:id="@+id/masterLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_layout_margin"
                android:layout_marginLeft="@dimen/base_layout_margin"
                android:layout_marginRight="@dimen/base_layout_margin"
                android:layout_marginTop="@dimen/base_layout_margin"
                android:text="@string/settings_yourdata"
                android:textColor="@color/base_text" />

            <LinearLayout
                android:id="@+id/masterLoginLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/masterLoginText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:text="@string/settings_myusername"
                    android:textColor="@color/base_text" />

                <EditText
                    android:id="@+id/masterLoginInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:background="@drawable/rounded_edittext"
                    android:digits="@string/symbol_list"
                    android:ems="7"
                    android:maxLength="100"
                    android:paddingLeft="@dimen/base_layout_margin"
                    android:paddingRight="@dimen/base_layout_margin"
                    android:singleLine="true"
                    android:textColor="@color/base_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/masterPassLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/masterPassText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:text="@string/settings_mypass"
                    android:textColor="@color/base_text" />

                <EditText
                    android:id="@+id/masterPassInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:background="@drawable/rounded_edittext"
                    android:digits="@string/symbol_list"
                    android:ems="7"
                    android:maxLength="100"
                    android:paddingLeft="@dimen/base_layout_margin"
                    android:paddingRight="@dimen/base_layout_margin"
                    android:singleLine="true"
                    android:textColor="@color/base_text" />
            </LinearLayout>

            <TextView
                android:id="@+id/targetsLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_layout_margin"
                android:layout_marginLeft="@dimen/base_layout_margin"
                android:layout_marginRight="@dimen/base_layout_margin"
                android:layout_marginTop="@dimen/base_layout_margin"
                android:text="@string/settings_targetsdata"
                android:textColor="@color/base_text" />

            <LinearLayout
                android:id="@+id/Target1Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/target1LoginText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:text="@string/settings_target1username"
                    android:textColor="@color/base_text" />

                <EditText
                    android:id="@+id/target1LoginInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:background="@drawable/rounded_edittext"
                    android:digits="@string/symbol_list"
                    android:ems="7"
                    android:maxLength="100"
                    android:paddingLeft="@dimen/base_layout_margin"
                    android:paddingRight="@dimen/base_layout_margin"
                    android:singleLine="true"
                    android:textColor="@color/base_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/target1PassLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/target1Pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:text="@string/settings_target1pass"
                    android:textColor="@color/base_text" />

                <EditText
                    android:id="@+id/target1PassInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:background="@drawable/rounded_edittext"
                    android:digits="@string/symbol_list"
                    android:ems="7"
                    android:maxLength="100"
                    android:paddingLeft="@dimen/base_layout_margin"
                    android:paddingRight="@dimen/base_layout_margin"
                    android:singleLine="true"
                    android:textColor="@color/base_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/target2Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/target2Login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:text="@string/settings_target2username"
                    android:textColor="@color/base_text" />

                <EditText
                    android:id="@+id/target2LoginInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:background="@drawable/rounded_edittext"
                    android:digits="@string/symbol_list"
                    android:ems="7"
                    android:maxLength="100"
                    android:paddingLeft="@dimen/base_layout_margin"
                    android:paddingRight="@dimen/base_layout_margin"
                    android:singleLine="true"
                    android:textColor="@color/base_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/target2PassLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/target2Pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:text="@string/settings_target2pass"
                    android:textColor="@color/base_text" />

                <EditText
                    android:id="@+id/target2PassInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_layout_margin"
                    android:layout_marginLeft="@dimen/base_layout_margin"
                    android:layout_marginRight="@dimen/base_layout_margin"
                    android:layout_marginTop="@dimen/base_layout_margin"
                    android:background="@drawable/rounded_edittext"
                    android:digits="@string/symbol_list"
                    android:ems="7"
                    android:maxLength="100"
                    android:paddingLeft="@dimen/base_layout_margin"
                    android:paddingRight="@dimen/base_layout_margin"
                    android:singleLine="true"
                    android:textColor="@color/base_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/EnterAutoBootupInviteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/AutoStartup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_bootupinvite"
                    android:textColor="@color/base_text" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/enterUsersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/settings_enter" />

</RelativeLayout>